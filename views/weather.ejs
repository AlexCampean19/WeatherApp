<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="'/">

    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <script src="https://kit.fontawesome.com/b0f990c8c7.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <title>Wather App</title>
</head>

<body>
    <header>
        <%if( weather !== null){ %>
            <p id="cityheader">
                <%= city %>
            </p>
            <p id="tempheader">
                <%= temperature %>°</p>
            <% } %>
                <button id="addfavorite">Add</button>



    </header>
    <main>
        <form action="/" method="post">
            <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
            <button type="submit">Get Weather</button>
        </form>
        <%if( weather !== null){ %>
            <div class="container">
                <div class="boxOne">
                    <h1 id="cityname">
                        <%= city %>
                    </h1>
                    <h2 id="citytemperature">
                        <%= temperature %>°
                    </h2>
                    <p id="status"></p>
                    <% if(description==0) { %>
                        Clear
                        <%  }%>
                            <% if(description==1) { %>
                                Mainly Clear
                                <%  }%>
                                    <% if(description==2) { %>
                                        Partly cloudy
                                        <%  }%>
                                            <% if(description==3) { %>
                                                Overcast
                                                <%  }%>
                                                    <% if(description==(45,48)) { %>
                                                        Fog
                                                        <%  }%>
                                                            <% if(description==(51,53,55,56,57)) { %>
                                                                Drizzle
                                                                <%  }%>
                                                                    <% if(description==(61,63,65,66,67,80,81,82)) { %>
                                                                        Rain
                                                                        <%  }%>
                                                                            <% if(description==(71,73,75,77,85,86)) { %>
                                                                                Snow
                                                                                <%  }%>
                                                                                    </p>
                                                                                    <div id="minmax">
                                                                                        <p>H:
                                                                                            <p id="tempmax">
                                                                                                <%= temp_max %>°
                                                                                            </p>
                                                                                        </p>
                                                                                        <p>L:
                                                                                            <p id="tempmin">
                                                                                                <%= temp_min %>°
                                                                                            </p>
                                                                                        </p>
                                                                                    </div>
                </div>
                <div class="boxTwo">
                    <div id="miniboxone">
                        <i id="clock"><span>Clock</span></i>
                        <p class="titlebox">HOURLY FORECAST</p>
                        <div id="card1">
                            <div class="boxHour">
                                <div class="timetemp">
                                    <% for (i = 0; i < ore.length; i++) { %>

                                        <p class="time">
                                            <%= ore[i].slice(-4) %>
                                        </p>
                                        <% if(i==23) {%>
                                            <%break %>
                                                <%} %>
                                                    <% }; %>
                                </div>
                                <div class="timetemp">
                                    <% for (i = 0; i < ore.length; i++) { %>
                                        <i class="cloud"><span> <%= ore[i].slice(-4) %></span></i>
                                        <% if(i==23) {%>
                                            <%break %>
                                                <%} %>
                                                    <% }; %>
                                </div>
                                <div class="timetemp">
                                    <% for (i = 0; i < gradeore.length; i++) { %>
                                        <p class="temponhour">
                                            <%= gradeore[i] %>°</p>
                                        <% if(i==23) {%>
                                            <%break %>
                                                <%} %>
                                                    <% }; %>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div id="miniboxtwo">
                        <i id="date"><span>Date</span></i>
                        <p class="titlebox">7-DAY FORECAST</p>
                        <div id="card2">
                            <div class="watherOnDay">
                                <div class="daytemp">
                                    <p class="day">
                                        <% for (i = 0; i < zile.length; i++) { %>
                                            <p>
                                                <%= zile[i] %>
                                            </p>

                                            <% }; %>
                                </div>
                                <div class="daytemp">
                                    <% for (i = 0; i < zile.length; i++) { %>

                                        <i class="cloud"><span>  <%= zile[i] %></span></i>
                                        <% }; %>
                                </div>
                                <div class="daytemp">
                                    <% for (i = 0; i < tempzilemin.length; i++) { %>
                                        <p id="tempmin">
                                            <%= tempzilemin[i] %>°
                                        </p>
                                        <% }; %>
                                </div>
                                <div class="daytemp">
                                    <% for (i = 0; i < tempzilemax.length; i++) { %>
                                        <p id="tempmin">
                                            <%= tempzilemax[i] %>°
                                        </p>
                                        <% }; %>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                <% if(error !== null){ %>
                    <p>
                        <%= error %>
                    </p>
                    <% } %>
    </main>
    <footer>
        <a onclick="location.href='/favorite'"><span>favorite</span></a>
    </footer>
    <script>
        console.log('intrarefisier');
        const butonadd = document.getElementById('addfavorite');
        butonadd.addEventListener('click', function() {
            console.log('ascultare');
            const numeoras = document.getElementById("cityheader").textContent.trim();
            console.log(numeoras)
            fetch('/add_favorite', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(numeoras)

                })
                .then((response) => {
                    console.log(response)
                }).catch((error) => {
                    console.log(error)
                })
        })
    </script>

</body>

</html>